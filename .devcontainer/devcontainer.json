{
  "name": "MCP Atlassian - Ultra Lightweight",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    }
  },
  
  "forwardPorts": [9000],
  "portsAttributes": {
    "9000": {
      "label": "MCP Atlassian Server",
      "onAutoForward": "notify"
    }
  },
  
  "postCreateCommand": "chmod +x mcp-manager.sh setup.sh && ./setup.sh",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "mcp": {
        "servers": {
          "mcp-atlassian-http": {
            "url": "http://127.0.0.1:9000/sse",
            "type": "http"
          }
        }
      }
    }
  },
  
  "runArgs": [
    "--privileged"
  ],
  "workspaceFolder": "/workspaces/MCP-Atlassian"
}
