{
  "name": "MCP Atlassian - Ultra Lightweight",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "installOhMyZsh": false,
      "upgradePackages": false,
      "username": "automatic",
      "uid": "automatic",
      "gid": "automatic"
    }
  },
  
  "forwardPorts": [9000],
  "portsAttributes": {
    "9000": {
      "label": "MCP Atlassian Server",
      "onAutoForward": "notify"
    }
  },
  
  "postCreateCommand": "apt-get update && apt-get install -y dos2unix && dos2unix bootstrap.sh && chmod +x bootstrap.sh && ./bootstrap.sh",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "mcp": {
        "servers": {
          "mcp-atlassian-http": {
            "url": "http://127.0.0.1:9000/sse",
            "type": "http"
          }
        }
      }
    }
  },
  
  "runArgs": [
    "--privileged"
  ],
  "workspaceFolder": "/workspaces/MCP-Atlassian"
}
